<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#42a5f5">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pilih Kepribadian"
            android:id="@+id/textView"
            android:layout_marginTop="26dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:id="@+id/estp"
                android:src="@drawable/estp"
                android:onClick="menuKepri2"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:id="@+id/estj"
                android:src="@drawable/estj"
                android:onClick="menuKepri2"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:id="@+id/enfp"
                android:src="@drawable/enfp"
                android:onClick="menuKepri2"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:id="@+id/entp"
                android:src="@drawable/entp"
                android:layout_below="@+id/textView"
                android:onClick="menuKepri2"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:id="@+id/esfp"
                android:src="@drawable/esfp"
                android:onClick="menuKepri2"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:id="@+id/esfj"
                android:src="@drawable/esfj"
                android:onClick="menuKepri2"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:id="@+id/enfj"
                android:src="@drawable/enfj"
                android:onClick="menuKepri2"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:id="@+id/entj"
                android:src="@drawable/entj"
                android:onClick="menuKepri2"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Halaman Sebelumnya"
            android:id="@+id/halSebelum"
            android:background="#ffffff"
            android:layout_gravity="center"
            android:onClick="menuKepri2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="credit: http://glaceau.deviantart.com/"
            android:id="@+id/textView14"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:layout_marginTop="5dp" />
    </LinearLayout>


</LinearLayout>