<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#42a5f5">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/muka"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Mulai Tes"
        android:id="@+id/button_mulai"
        android:layout_gravity="center"
        android:textColor="#0277bd"
        android:background="#ffffff"
        android:onClick="mainMenu"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Hasil Tes"
        android:id="@+id/button_hasil_tes"
        android:layout_gravity="center"
        android:textColor="#0277bd"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:onClick="mainMenu"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Deskripsi Kepribadian"
        android:id="@+id/button_deskripsi"
        android:layout_gravity="center"
        android:textColor="#0277bd"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:onClick="mainMenu"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Myer Briggs Personality Test"
            android:id="@+id/textView9"
            android:textColor="#ffffff"
            android:layout_marginBottom="8dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="credit: https://nafismudrika.wordpress.com"
            android:id="@+id/textView8"
            android:textColor="#ffffff"
            android:layout_marginBottom="10dp"
            android:textSize="16dp"
            android:layout_gravity="bottom|center_horizontal" />

    </LinearLayout>

</LinearLayout>