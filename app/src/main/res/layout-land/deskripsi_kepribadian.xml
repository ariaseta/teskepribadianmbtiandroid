<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#42a5f5">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pilih Kepribadian"
            android:id="@+id/textView"
            android:layout_marginTop="15dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="70dp"
                    android:id="@+id/istp"
                    android:src="@drawable/istp"
                    android:onClick="menuKepri1"
                    android:layout_margin="3dp" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="70dp"
                    android:id="@+id/istj"
                    android:src="@drawable/istj"
                    android:layout_below="@+id/textView"
                    android:onClick="menuKepri1"
                    android:layout_margin="3dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="70dp"
                    android:id="@+id/isfp"
                    android:src="@drawable/isfp"
                    android:onClick="menuKepri1"
                    android:layout_margin="3dp" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="70dp"
                    android:id="@+id/isfj"
                    android:src="@drawable/isfj"
                    android:onClick="menuKepri1"
                    android:layout_margin="3dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="70dp"
                    android:id="@+id/infp"
                    android:src="@drawable/infp"
                    android:onClick="menuKepri1"
                    android:layout_margin="3dp" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="70dp"
                    android:id="@+id/infj"
                    android:src="@drawable/infj"
                    android:onClick="menuKepri1"
                    android:layout_margin="3dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="70dp"
                    android:id="@+id/intp"
                    android:src="@drawable/intp"
                    android:onClick="menuKepri1"
                    android:layout_margin="3dp" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="70dp"
                    android:id="@+id/intj"
                    android:src="@drawable/intj"
                    android:onClick="menuKepri1"
                    android:layout_margin="3dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Halaman Berikutnya"
            android:id="@+id/halBerikut"
            android:background="#ffffff"
            android:layout_gravity="center"
            android:onClick="menuKepri1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="credit: http://glaceau.deviantart.com/"
            android:id="@+id/textView14"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:layout_marginTop="5dp" />
    </LinearLayout>


</LinearLayout>